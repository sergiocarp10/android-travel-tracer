<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelTracer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TravelTracer.Buses" parent="Theme.TravelTracer.NoActionBar">
        <item name="colorPrimary">@color/bus</item>
        <item name="colorPrimaryVariant">#00769E</item>
        <item name="colorSecondary">#00BCD4</item>
    </style>

    <style name="Theme.TravelTracer.Trains" parent="Theme.TravelTracer.NoActionBar">
        <item name="colorPrimary">@color/train</item>
        <item name="colorPrimaryVariant">#293EB3</item>
        <item name="colorSecondary">#757EAF</item>
    </style>

    <style name="Theme.TravelTracer.Subways" parent="Theme.TravelTracer.NoActionBar">
        <item name="colorPrimary">@color/bus_148</item>
        <item name="colorPrimaryVariant">#B39C29</item>
        <item name="colorSecondary">#AFA175</item>
    </style>

    <style name="Theme.TravelTracer.Coffee" parent="Theme.TravelTracer.NoActionBar">
        <item name="colorPrimary">#B5643F</item>
        <item name="colorPrimaryVariant">#B37529</item>
        <item name="colorSecondary">#AF9075</item>
    </style>

    <style name="Theme.TravelTracer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TravelTracer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TravelTracer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>